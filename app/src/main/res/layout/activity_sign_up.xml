<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundpink"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/megaphone"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/megaphone" />

    <ImageView
        android:id="@+id/white_background"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_bg" />

    <TextView
        android:id="@+id/new_account"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignTop="@id/white_background"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="New Account"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/camera_attach"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/white_background"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/circle_bg"
        android:src="@drawable/camera" />


    <TextView
        android:id="@+id/full_name"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@id/new_account"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_thin"
        android:text="Full Name"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/full_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10px"
        android:src="@drawable/person" />

    <ImageView
        android:id="@+id/line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/person_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="40dp"
        android:background="@color/darkpink" />

    <EditText
        android:id="@+id/text_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/line_horizontal"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="-25px"
        android:layout_toRightOf="@id/person_icon"
        android:fontFamily="@font/montserrat"
        android:paddingTop="10px"
        android:text="Jason Zhu"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@id/line_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_thin"
        android:text="Email"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/email_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10px"
        android:src="@drawable/email" />

    <ImageView
        android:id="@+id/line_horizontal2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/email_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="40dp"
        android:background="@color/darkpink" />

    <EditText
        android:id="@+id/text_input2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/line_horizontal2"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="-25px"
        android:layout_toRightOf="@id/person_icon"
        android:fontFamily="@font/montserrat"
        android:paddingTop="10px"
        android:text="zhu.jason14@gmail.com"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@id/line_horizontal2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_thin"
        android:text="Phone Number"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/phone_number_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10px"
        android:src="@drawable/phone" />

    <ImageView
        android:id="@+id/line_horizontal3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/phone_icon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="40dp"
        android:background="@color/darkpink" />

    <EditText
        android:id="@+id/text_input3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/line_horizontal3"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="-25px"
        android:layout_toRightOf="@id/person_icon"
        android:fontFamily="@font/montserrat"
        android:paddingTop="10px"
        android:text="(603) 809-5146"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@id/line_horizontal3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lato_thin"
        android:text="Password"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/password_key"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/password_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10px"
        android:src="@drawable/password" />

    <ImageView
        android:id="@+id/line_horizontal4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/password_key"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15px"
        android:layout_marginRight="40dp"
        android:background="@color/darkpink" />

    <EditText
        android:id="@+id/text_input4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/line_horizontal4"
        android:layout_marginLeft="10px"
        android:layout_marginBottom="-25px"
        android:layout_toRightOf="@id/person_icon"
        android:fontFamily="@font/montserrat"
        android:paddingTop="10px"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/sign_up_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100px"
        android:background="@drawable/sign_up_button" />


</RelativeLayout>